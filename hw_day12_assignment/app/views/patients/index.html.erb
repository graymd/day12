<h1>Patients</h1>
<br>
<%= link_to "Create New Patient Information", new_patient_path %>
<br>
<ul>
<% @patients.each do |patient| %>
  <li>
    <strong>Patient Name:</strong>
    <%= patient.first_name %>
    <%= patient.last_name %>
    <br>
    <strong>DOB:</strong>
    <%= patient.date_of_birth %>
    <br>
    <strong>Description:</strong>
    <%= patient.description %>
    <br>
    <strong>Gender:</strong>
    <%= patient.gender %>
    <br>
    <strong>Blood Type:</strong>
    <%= patient.blood_type %>
  </li>
<% end %>
</ul>